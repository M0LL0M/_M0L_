.container {
  padding: 20rpx;
}

.avatar-btn {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #c5c2c2; /* background color */
  display: flex;
  justify-content: center;
  align-items: center;
  border: none; /* Remove the border */
}

.avatar-img {
  width: 100%; /* Adjust to 100%*/
  height: 100%; /* Adjust to 100% */
  border-radius: 50%; /* Ensure it is circular */
}

.header {
  font-size: 36rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.form {
  display: flex;
  flex-direction: column;
}

.form-item {
  margin-bottom: 30rpx;
}

label {
  font-size: 28rpx;
  color: #333;
}

input {
  width: 100%;
  padding: 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  font-size: 28rpx;
  margin-top: 10rpx;
}

button {
  background-color: #c5c0c0;
  color: rgb(7, 7, 7);
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
  text-align: center;
}
